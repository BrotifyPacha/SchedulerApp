<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/screenContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
    >

        <LinearLayout
                android:id="@+id/adContainer"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">
            <com.google.android.gms.ads.AdView
                    xmlns:ads="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/adView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    ads:adSize="BANNER"
                    ads:adUnitId="ca-app-pub-4572037752382250/5160073242"/>
            <FrameLayout
                    android:id="@+id/adViewPlaceholder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
            />
        </LinearLayout>
        <TextView
                style="@style/AppTheme.Body3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Дата изменения"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:id="@+id/textView10" android:textColor="@color/primaryColor"
                app:layout_constraintTop_toBottomOf="@+id/adContainer"/>
        <TextView
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/date_picker"
                app:layout_constraintStart_toStartOf="@+id/textView10"
                android:textSize="33sp"
                tools:text="00.00.00"
                style="@style/AppTheme.Body2"
                app:layout_constraintTop_toBottomOf="@+id/textView10" android:textAppearance="@style/AppTheme.Body1"/>

        <TextView
                style="@style/AppTheme.Body3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Занятия"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:id="@+id/textView11" app:layout_constraintTop_toBottomOf="@+id/date_picker"
                android:textColor="@color/primaryColor"/>
        <LinearLayout
                android:id="@+id/lessons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/textView11"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/constraintLayout1"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">
                <TextView
                        style="@style/AppTheme.Body2"
                        android:textColor="@color/secondaryDarkColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp" app:layout_constraintTop_toTopOf="parent"
                        android:id="@+id/textView5"/>

                <EditText
                        android:id="@+id/lesson_edit_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/textView5"
                        android:layout_marginStart="8dp" android:scrollHorizontally="false"
                        style="@style/AppTheme.Widget.EditText" android:layout_marginTop="4dp"
                        android:inputType="textMultiLine|textNoSuggestions"/>

                <include
                        android:layout_height="1dp"
                        android:layout_width="match_parent"
                        layout="@layout/divider"
                        android:id="@+id/include2"
                        app:layout_constraintTop_toBottomOf="@+id/lesson_edit_1" android:layout_marginTop="4dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_height="wrap_content"
                    android:id="@+id/constraintLayout2"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout1">
                <TextView
                        style="@style/AppTheme.Body2"
                        android:textColor="@color/secondaryDarkColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp" app:layout_constraintTop_toTopOf="parent"
                        android:id="@+id/textView4"/>

                <EditText
                        android:id="@+id/lesson_edit_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/textView4"
                        android:layout_marginStart="8dp" android:scrollHorizontally="false"
                        style="@style/AppTheme.Widget.EditText" android:layout_marginTop="4dp"
                        android:inputType="textMultiLine|textNoSuggestions"/>

                <include
                        android:layout_height="1dp"
                        android:layout_width="match_parent"
                        layout="@layout/divider"
                        android:id="@+id/include2"
                        app:layout_constraintTop_toBottomOf="@+id/lesson_edit_2" android:layout_marginTop="4dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_height="wrap_content"
                    android:id="@+id/constraintLayout3"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout2">
                <TextView
                        style="@style/AppTheme.Body2"
                        android:textColor="@color/secondaryDarkColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp" app:layout_constraintTop_toTopOf="parent"
                        android:id="@+id/textView3"/>
                <EditText
                        android:id="@+id/lesson_edit_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/textView3"
                        android:layout_marginStart="8dp"
                        android:scrollHorizontally="false" style="@style/AppTheme.Widget.EditText"
                        android:layout_marginTop="4dp" android:inputType="textMultiLine|textNoSuggestions"
                />
                <include
                        android:layout_height="1dp"
                        android:layout_width="match_parent"
                        layout="@layout/divider"
                        android:id="@+id/include2"
                        app:layout_constraintTop_toBottomOf="@+id/lesson_edit_3" android:layout_marginTop="4dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_height="wrap_content"
                    android:id="@+id/constraintLayout4"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout3">
                <TextView
                        style="@style/AppTheme.Body2"
                        android:textColor="@color/secondaryDarkColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp" app:layout_constraintTop_toTopOf="parent"
                        android:id="@+id/textView2"/>
                <EditText
                        android:id="@+id/lesson_edit_4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/textView2"
                        android:layout_marginStart="8dp"
                        android:scrollHorizontally="false" style="@style/AppTheme.Widget.EditText"
                        android:layout_marginTop="4dp" android:inputType="textMultiLine|textNoSuggestions"
                />

                <include
                        android:layout_height="1dp"
                        android:layout_width="match_parent"
                        layout="@layout/divider"
                        android:id="@+id/include2"
                        app:layout_constraintTop_toBottomOf="@+id/lesson_edit_4" android:layout_marginTop="4dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_height="wrap_content"
                    android:id="@+id/constraintLayout5"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout4">
                <TextView
                        style="@style/AppTheme.Body2"
                        android:textColor="@color/secondaryDarkColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp" app:layout_constraintTop_toTopOf="parent"
                        android:id="@+id/textView"/>
                <EditText
                        android:id="@+id/lesson_edit_5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/textView"
                        android:layout_marginStart="8dp"
                        android:scrollHorizontally="false" style="@style/AppTheme.Widget.EditText"
                        android:layout_marginTop="4dp" android:inputType="textMultiLine|textNoSuggestions"
                />
                <include
                        android:layout_height="1dp"
                        android:layout_width="match_parent"
                        layout="@layout/divider"
                        android:id="@+id/include2"
                        app:layout_constraintTop_toBottomOf="@+id/lesson_edit_5" android:layout_marginTop="4dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_height="wrap_content"
                    android:id="@+id/constraintLayout6"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout5">
                <TextView
                        style="@style/AppTheme.Body2"
                        android:textColor="@color/secondaryDarkColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp" app:layout_constraintTop_toTopOf="parent"
                        android:id="@+id/textView6"/>
                <EditText
                        android:id="@+id/lesson_edit_6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/textView6" android:layout_marginStart="8dp"
                        android:scrollHorizontally="false" style="@style/AppTheme.Widget.EditText"
                        android:layout_marginTop="4dp" android:singleLine="false"
                        android:inputType="textMultiLine|textNoSuggestions"/>

                <include
                        android:layout_height="1dp"
                        android:layout_width="match_parent"
                        layout="@layout/divider"
                        android:id="@+id/include2"
                        app:layout_constraintTop_toBottomOf="@+id/lesson_edit_6" android:layout_marginTop="4dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_height="wrap_content"
                    android:id="@+id/constraintLayout7"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout6">
                <TextView
                        style="@style/AppTheme.Body2"
                        android:textColor="@color/secondaryDarkColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp" app:layout_constraintTop_toTopOf="parent"
                        android:id="@+id/textView7"/>
                <EditText
                        android:id="@+id/lesson_edit_7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/textView7" android:layout_marginStart="8dp"
                        android:maxLines="5" android:scrollHorizontally="false"
                        style="@style/AppTheme.Widget.EditText" android:layout_marginTop="4dp"
                        android:singleLine="false"
                        android:inputType="textMultiLine|textNoSuggestions"/>
                <include
                        android:layout_height="1dp"
                        android:layout_width="match_parent"
                        layout="@layout/divider"
                        android:id="@+id/include2"
                        app:layout_constraintTop_toBottomOf="@+id/lesson_edit_7" android:layout_marginTop="4dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_height="wrap_content"
                    android:id="@+id/constraintLayout8"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout7">
                <TextView
                        style="@style/AppTheme.Body2"
                        android:textColor="@color/secondaryDarkColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp" app:layout_constraintTop_toTopOf="parent"
                        android:id="@+id/textView8"/>
                <EditText
                        android:id="@+id/lesson_edit_8"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/textView8" android:layout_marginStart="8dp"
                        android:scrollHorizontally="false" style="@style/AppTheme.Widget.EditText"
                        android:layout_marginTop="4dp" android:inputType="textMultiLine|textNoSuggestions"
                />

                <include
                        android:layout_height="1dp"
                        android:layout_width="match_parent"
                        layout="@layout/divider"
                        android:id="@+id/include2"
                        app:layout_constraintTop_toBottomOf="@+id/lesson_edit_8" android:layout_marginTop="4dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_height="wrap_content"
                    android:id="@+id/constraintLayout9"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout8">
                <TextView
                        style="@style/AppTheme.Body2"
                        android:textColor="@color/secondaryDarkColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp" app:layout_constraintTop_toTopOf="parent"
                        android:id="@+id/textView9"/>
                <EditText
                        android:maxLines="5"
                        android:id="@+id/lesson_edit_9"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/textView9" android:layout_marginStart="8dp"
                        android:scrollHorizontally="false" style="@style/AppTheme.Widget.EditText"
                        android:layout_marginTop="4dp" android:layout_marginBottom="4dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:inputType="textMultiLine|textNoSuggestions"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
        <Button
                android:text="Готово"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/positive_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lessons"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                style="@style/AppTheme.Widget.ButtonPrimary.Minimal"
                tools:layout_editor_absoluteY="8dp"/>
        <Button
                android:text="Отмена"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/negative_buttton"
                app:layout_constraintEnd_toStartOf="@+id/positive_button"
                android:layout_marginEnd="24dp"
                style="@style/AppTheme.Widget.ButtonSecondary.Minimal"
                app:layout_constraintBaseline_toBaselineOf="@+id/positive_button"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>