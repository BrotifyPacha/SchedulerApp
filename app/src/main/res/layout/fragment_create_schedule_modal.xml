<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/layout">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
    >
        <LinearLayout
                android:id="@+id/name_edit_layout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="10dp">
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Название расписания" android:id="@+id/name_edit"
                    style="@style/AppTheme.Widget.EditText"
            />
            <TextView
                    style="@style/AppTheme.Body1"
                    android:id="@+id/name_helper_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="*обязательно к заполнению"
                    android:textColor="@color/mtrl_dark_on_surface_disabled"/>

        </LinearLayout>
        <LinearLayout
                android:id="@+id/alias_edit_layout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="10dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/name_edit_layout">
            <EditText
                    style="@style/AppTheme.Widget.EditText"
                    android:id="@+id/alias_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Идентификатор расписания"
            />
            <TextView
                    style="@style/AppTheme.Body1"
                    android:id="@+id/alias_helper_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Оставьте пустым для автозаполнения"
                    android:textColor="@color/mtrl_dark_on_surface_disabled"/>

        </LinearLayout>
        <Button
                style="@style/AppTheme.Widget.ButtonSecondary.Minimal"
                android:id="@+id/cancel_button"
                android:text="Отмена"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:insetBottom="0dp"
                android:paddingTop="0dp"
                android:textSize="16sp"
                android:insetTop="0dp"
                app:layout_constraintEnd_toStartOf="@+id/positive_button"
                app:layout_constraintBaseline_toBaselineOf="@+id/next_button"/>
        <Button
                style="@style/AppTheme.Widget.ButtonPrimary.Minimal"
                android:id="@+id/next_button"
                android:text="Далее"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingTop="0dp"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/alias_edit_layout"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
