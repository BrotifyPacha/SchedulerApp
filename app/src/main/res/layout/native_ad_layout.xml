<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.formats.UnifiedNativeAdView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/ad_view"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >
        <TextView
                android:id="@+id/ad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Реклама"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" android:layout_marginTop="8dp"/>
        <com.google.android.gms.ads.formats.AdChoicesView
                android:id="@+id/ad_choices"
                android:layout_width="15dp"
                android:layout_height="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"/>
        <TextView
                android:id="@+id/ad_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buy my shoe collection!"
                app:layout_constraintTop_toBottomOf="@+id/ad"
                app:layout_constraintStart_toStartOf="parent" style="@style/AppTheme.Body2"
                android:textColor="@color/primaryColor" android:layout_marginStart="16dp"/>

        <TextView
                android:id="@+id/ad_body"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Buy my shoe collection!"
                app:layout_constraintTop_toBottomOf="@+id/ad_header"
                app:layout_constraintStart_toStartOf="parent" style="@style/AppTheme.Body1"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginStart="16dp"/>

        <TextView
                android:id="@+id/ad_advertiser"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Buy my shoe collection!"
                app:layout_constraintStart_toStartOf="parent" style="@style/AppTheme.Body1"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@+id/ad_body" android:textStyle="bold"/>
        <include layout="@layout/divider"
                 android:layout_width="match_parent"
                 android:layout_height="1dp"
                 tools:layout_editor_absoluteX="8dp" android:id="@+id/include3"
                 app:layout_constraintTop_toBottomOf="@id/ad_advertiser" android:layout_marginTop="8dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.gms.ads.formats.UnifiedNativeAdView>